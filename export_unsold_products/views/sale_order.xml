<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_from_sale_order" model="ir.ui.view">
        <field name="name">view.form.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="export_unsold_products" type="object" string="Export unsold product"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>